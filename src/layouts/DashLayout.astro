---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";
import Breadcrumbs from "@components/layout/Breadcrumbs.astro";

interface Crumb {
  name: string;
  url?: string;
}
interface Props {
  title: string;
  description: string;
  breadcrumbItems: Crumb[];
}
const { title, description, breadcrumbItems } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <main class="w-full min-h-screen bg-slate-50 overflow-hidden">
    <div class="drawer lg:drawer-open h-screen">
      <input id="side-drawer" type="checkbox" class="drawer-toggle" />
      <div
        class="w-full h-full drawer-content flex flex-col items-center justify-start overflow-y-auto"
      >
        <!-- Menu toggle on small screens -->
        <label
          for="side-drawer"
          class="btn btn-primary drawer-button lg:hidden m-4"
        >
          Open drawer
        </label>
        <!-- Content Section -->
        <section class="px-4 sm:px-6 mx-auto max-w-4xl">
          <Breadcrumbs items={breadcrumbItems} />
          <slot />
        </section>
      </div>
      <div class="drawer-side fixed">
        <label
          for="side-drawer"
          aria-label="close sidebar"
          class="drawer-overlay"></label>
        <aside class="bg-white text-base-content h-full w-72 flex flex-col">
          <!-- Header section with logo -->
          <div class="p-6 border-b border-base-300">
            <img src="/logo/logo.png" alt="Logo" class="h-8 w-auto" />
          </div>

          <!-- Scrollable content area -->
          <div class="flex-1 flex flex-col overflow-y-auto">
            <!-- First Group - Top Level Menus -->
            <ul class="space-y-1 p-4">
              <li>
                <a
                  href="/dashboard"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon
                    name="mdi:view-dashboard"
                    class="w-5 h-5 mr-2 text-primary"
                  />
                  Dashboard
                </a>
              </li>
              <li>
                <a
                  href="/notifications"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon name="mdi:bell" class="w-5 h-5 mr-2 text-primary" />
                  Notifications
                </a>
              </li>
              <li>
                <a
                  href="/program/challenges"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon name="mdi:trophy" class="w-5 h-5 mr-2 text-primary" />
                  Challenges
                </a>
              </li>
              <li>
                <a
                  href="/program/projects"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon
                    name="mdi:file-document-multiple"
                    class="w-5 h-5 mr-2 text-primary"
                  />
                  Projects
                </a>
              </li>
              <li>
                <a
                  href="/program/assets"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon
                    name="mdi:file-cabinet"
                    class="w-5 h-5 mr-2 text-primary"
                  />
                  Assets
                </a>
              </li>
              <li>
                <a
                  href="/program/opportunities"
                  class="flex items-center space-x-3 px-3 py-2 rounded-lg text-base-content hover:bg-base-200 hover:text-primary transition-colors duration-200"
                >
                  <Icon
                    name="mdi:briefcase"
                    class="w-5 h-5 mr-2 text-primary"
                  />
                  Opportunities
                </a>
              </li>
            </ul>
          </div>

          <!-- Footer section (optional) -->
          <div class="p-4 border-t border-base-300">
            <button class="btn btn-primary btn-sm w-full">Action Button</button>
          </div>
        </aside>
      </div>
    </div>
  </main>
</BaseLayout>
