---
import { Icon } from "astro-icon/components";
---

<section>
    <div class="container mx-auto py-20 md:py-28 px-5 lg:px-8">
        <div class="py-16">
            {/* Section Header */}
            <div class="text-center mb-16 max-w-3xl mx-auto">
                <h2 class="text-3xl md:text-4xl font-bold mb-4">
                    Your Founder Network Advantage
                </h2>
                <p class="text-lg text-base-content/80">
                    Tap into a curated ecosystem of peers, mentors, and early
                    adopters to accelerate your journey.
                </p>
            </div>

            {/* Network Benefits Grid */}
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-16">
                {/* Peer Network */}
                <div
                    class="bg-white p-6 rounded-xl border border-base-200 hover:shadow-md transition-all"
                >
                    <div class="flex items-center mb-4">
                        <div
                            class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-primary"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold">Founder Peers</h3>
                    </div>
                    <ul class="space-y-3 text-base-content/80">
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Discover others like you</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Dedicated groups and forum</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Collaboration opportunities</span>
                        </li>
                    </ul>
                </div>

                {/* Mentors */}
                <div
                    class="bg-white p-6 rounded-xl border border-base-200 hover:shadow-md transition-all"
                >
                    <div class="flex items-center mb-4">
                        <div
                            class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-primary"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold">Expert Guidance</h3>
                    </div>
                    <ul class="space-y-3 text-base-content/80">
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Expert AMAs</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Live sessions</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Specialized workshops</span>
                        </li>
                    </ul>
                </div>

                {/* Early Adopters */}
                <div
                    class="bg-white p-6 rounded-xl border border-base-200 hover:shadow-md transition-all"
                >
                    <div class="flex items-center mb-4">
                        <div
                            class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mr-4"
                        >
                            <svg
                                class="w-6 h-6 text-primary"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"
                                ></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-semibold">Early Adopters</h3>
                    </div>
                    <ul class="space-y-3 text-base-content/80">
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Beta test your MVP</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Validate pricing</span>
                        </li>
                        <li class="flex items-start">
                            <svg
                                class="w-5 h-5 text-primary mr-2 mt-0.5 flex-shrink-0"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    stroke-width="2"
                                    d="M5 13l4 4L19 7"></path>
                            </svg>
                            <span>Gather quality feedback</span>
                        </li>
                    </ul>
                </div>
            </div>

            {/* CTA */}
            <div
                class="bg-gradient-to-r from-primary/5 to-primary/10 rounded-2xl p-8 md:p-10 text-center max-w-4xl mx-auto"
            >
                <h3 class="text-2xl font-bold mb-4">
                    Ready to Join Our Founder Network?
                </h3>
                <p class="text-base-content/80 mb-6 max-w-2xl mx-auto">
                    Access all community features when you enroll in the full
                    program.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <a href="#pricing" class="btn btn-primary px-8"
                        >See Program Options</a
                    >
                    <a
                        href="/network-preview"
                        class="btn btn-outline border-base-content/20"
                        >Take a Tour</a
                    >
                </div>
            </div>
        </div>
    </div>
</section>
