---
interface Props {
  title: string;
  description?: string;
  sequence: number;
  subtitle?: string;
}

const { title, description, sequence, subtitle } = Astro.props;
---

<div class="group relative block h-64">
    <span class="absolute inset-0 border-2 border-dashed border-white"></span>

    <div
      class="relative flex h-full transform items-end border-2 border-white bg-primary transition-transform group-hover:-translate-x-2 group-hover:-translate-y-2"
    >
      <div
        class="p-4 !pt-0 transition-opacity group-hover:absolute group-hover:opacity-0"
      >
        <div class="btn btn-ghost btn-circle"><p class="text-7xl font-variation-bold text-white">{sequence}</p></div>

        <h2 class="mt-4 text-xl text-white">{title}</h2>
      </div>

      <div
        class="absolute p-4 opacity-0 transition-opacity group-hover:relative group-hover:opacity-100"
      >
        <h3 class="mt-4 text-lg text-white font-medium">{subtitle}</h3>

        <p class="mt-4 text-sm text-white">
          {description}
        </p>

      </div>
    </div>
  </div>
